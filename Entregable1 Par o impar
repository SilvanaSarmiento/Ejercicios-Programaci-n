//tengo que preguntarle al usuario un numero y mostrarle si este numero es par o impar
//si es 0 tambien debe ser declarado 
// primero debo declarar con let questionint para que el usuario pueda poner el numero que desee
//luego con if declarar si el numero es 0 la respuesta sera 0
// si el numero al dividirlo por 2 no de resto el numero es par
// y por ultimo si al contrario da resto (else) sera impar

import * as rls from "readline-sync"; 
let numero: number = rls.questionInt("ingrese un numero")

if (numero == 0){
console.log("el numero ingresado es 0");
} else {
    if (numero % 2 == 0) {
 console.log("el numero es Par");
} else {
 console.log("el numero es Impar");
    }
}
      
